{{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
    <div class="form-group">
        <div class="form-group col-md-6">
            <label class="icon-primitive-square"> Code article</label>
            {{ form_widget(form.code, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label class="icon-primitive-square"> Référence fournisseur</label>
            {{ form_widget(form.refFournisseur, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="form-group col-md-6">
            <label class="icon-primitive-square"> Référence commande</label>
            {{ form_widget(form.refCommande, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label class="icon-primitive-square"> Référence</label>
            {{ form_widget(form.reference, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
    </div>
    <hr>
    <div class="form-group">
        <div class="form-group col-md-4">
            <label class="icon-primitive-square"> Prix d'achat</label>
            {{ form_widget(form.prixAchat, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
        <div class="form-group col-md-4">
            <label class="icon-primitive-square"> Remise ( <i class="icon-percent"></i> ) </label>
            {{ form_widget(form.remise, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
        <div class="form-group col-md-4">
            <label class="icon-primitive-square"> Prix de vente</label>
            {{ form_widget(form.prixVente, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
    </div>
    <hr>
    <div class="form-group">
        <div class="form-group col-md-6">
            <label class="icon-primitive-square"> Marque</label>
            {{ form_widget(form.marque, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label class="icon-primitive-square"> Fournisseur</label>
            {{ form_widget(form.selectedFr, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="form-group col-md-6">
            <label class="icon-primitive-square"> ETAT</label>
            {{ form_widget(form.etat, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label class="icon-primitive-square"> Ref Spécial ?</label>
            {{ form_widget(form.isSpecial, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="form-group col-md-6">
            <label class="icon-primitive-square"> Poids</label>
            {{ form_widget(form.poids, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label class="icon-primitive-square"> Codebarre</label>
            {{ form_widget(form.codebarre, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="icon-primitive-square"> Nomenclature douanière</label>
        {{ form_widget(form.hscode, {'attr':{'class':'form-control input-xlg border-primary'}}) }}
    </div>
    <div class="form-group">
        <label class="icon-primitive-square"> Commentaire</label>
        {{ form_widget(form.commentaire, {'attr':{'class':'form-control border-primary','rows':'4','cols':'4'}}) }}
    </div>
    <div class="form-group">
        <label class="icon-primitive-square"> Libelle</label>
        {{ form_widget(form.libelle, {'attr':{'class':'form-control border-primary','rows':'4','cols':'4'}}) }}
    </div>
    <div class="form-group pull-right">
        <br>
        <button type="submit" class="btn btn-primary"><i class="icon-user-plus"></i> {{ btn_label|default("Ajouter l'article") }}</button>
    </div>
{{ form_end(form) }}
