<div class="navbar navbar-inverse">
    {% block header %}{% endblock %}
</div>

<div class="page-container">
    <div class="page-content">
        <div class="sidebar sidebar-main">
            <div class="sidebar-content">
                {% block sidebar %}{% endblock %}
            </div>
        </div>
        <div class="content-wrapper">
            <div class="page-header page-header-default">
                <div class="page-header-content row no-margin">
                    <div class="page-title col-md-6">
                        <h6>
                            <a href="/" class="text-semibold"><i class="icon-home2 position-left"></i> Accueil</a>
                            {% if currentPage is defined %} <b>>> {{currentPage}}</b> {% endif %}
                        </h6>
                    </div>
                    <div class="heading-elements col-md-6">
                        <div class="row">
                            {#== modal dialog for notice displaying ==#}
                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{label}} col-md-10 text-center">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="content">
                {% if activeFloatBtn is defined %}
                    <ul class="fab-menu fab-menu-fixed fab-menu-bottom-right">
                        <li>
                            <a class="fab-menu-btn btn bg-teal-400 btn-float btn-rounded btn-icon" id="nav_up" >
                                <i class="fab-icon-open icon-chevron-up"></i>
                            </a>
                        </li>
                    </ul>
                    <ul class="fab-menu fab-menu-absolute fab-menu-top-right">
                        <li>
                            <a class="fab-menu-btn btn bg-teal-400 btn-float btn-rounded btn-icon" id="nav_down">
                                <i class="fab-icon-open icon-chevron-down"></i>
                            </a>
                        </li>
                    </ul>
                {% endif %}
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
</div>
<div class="footer text-muted" id="footer">
    {% block footer %}{% endblock %}
</div>
