{% extends 'base.html.twig' %}

{% block title %}Mise à jour du groupe{% endblock %}
{% set currentPage = "Modification" %}

{% block body %}
    {% embed "main_layout.html.twig" %}
        {% block header %}
            {% include 'shared/header.html.twig' %}
        {% endblock %}
        {% block sidebar %}
            {% include 'shared/sidebar.html.twig' %}
        {% endblock %}
        {% block footer %}
            {% include 'shared/footer.html.twig' %}
        {% endblock %}
        {% block content %}
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading text-primary">
                            <div class="row">
                                <h3 class="col-sm-8 panel-title"> Ajout d'un nouveau groupe de remise</h3>
                                <a href="{{ path('groupe_remise_index') }}" class="col-sm-4 btn btn-sm btn-flat border-slate text-slate text-bold">
                                    <i class="icon-undo2"></i> Revenir à l'accueil des groupes
                                </a>
                            </div>
                        </div>
                        <div class="panel-body">
                            {{ include('groupe_remise/_form.html.twig', {'btn_label': 'Mettre à jour le groupe'}) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-3"></div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}
